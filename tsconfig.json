{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",                  
    "moduleResolution": "Bundler",   
    "paths": {
      "@/*": ["./*"]
    },
    "types": ["expo", "react", "react-native"] 
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
